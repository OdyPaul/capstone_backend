<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Transcript of Records</title>
  <style>
    @page { size: A4; margin: 10mm; }
    html, body { height: 100%; }
    body { margin: 0; font-family: Arial, sans-serif; font-size: 12px; -webkit-print-color-adjust: exact; print-color-adjust: exact; }

    .page {
      position: relative;
      width: 190mm;           /* A4 width (210) - margins 10+10 */
      height: 277mm;          /* A4 height (297) - margins 10+10 */
      page-break-after: always;
      box-sizing: border-box;

      background-repeat: no-repeat;
      background-position: 0 0;
      background-size: 190mm 277mm;

      --left: 10mm;
      --right: 10mm;

      /* top offsets */
      --meta-top-first: 40mm;     /* where the printed labels start on page 1 */
      --rows-top-first:  92mm;    /* subject rows start (p1) */
      --rows-top-next:   72mm;    /* subject rows start (p2+) */
    }

    /* ---------- Printed labels (replace background labels) ---------- */
    .meta {
      position: absolute;
      left: var(--left);
      right: var(--right);
      font-size: 11px;
      line-height: 1.25;
    }
    .page.first .meta { top: var(--meta-top-first); }
    .page.other .meta { display:none; } /* labels only on first page */

    .meta-row {
      display: grid;
      grid-template-columns: 1fr 1fr;   /* left/right halves */
      column-gap: 10mm;
      margin-bottom: 4mm;
    }
    .meta-item { white-space: nowrap; }
    .label { font-weight: 600; }
    .value {
      display: inline-block;
      min-width: 55mm;                 /* underline length */
      border-bottom: 1px solid #000;   /* visual underscore */
      transform: translateY(-1px);     /* sit nicely on the line */
      padding: 0 2mm;
      max-width: calc(100% - 40mm);
      overflow: hidden;
      text-overflow: ellipsis;
      vertical-align: baseline;
    }

    /* Single full-width row (e.g., DEGREE/TITLE EARNED) */
    .meta-row.full { grid-template-columns: 1fr; }

    /* ---------- Table (subjects) ---------- */
    .grid {
      position: absolute;
      left: var(--left);
      right: var(--right);
      border-collapse: collapse;
      table-layout: fixed;
      font-size: 11px;
    }
    .page.first .grid { top: var(--rows-top-first); }
    .page.other .grid { top: var(--rows-top-next); }

    /* Make TERM wider as requested */
    .grid col.col-term   { width: 32mm; }  /* was 24mm */
    .grid col.col-code   { width: 26mm; }
    .grid col.col-subj   { width: auto; }
    .grid col.col-grade  { width: 18mm; }
    .grid col.col-reexam { width: 18mm; }
    .grid col.col-units  { width: 16mm; }

    /* Header: top & bottom border only */
    thead th {
      font-weight: 700;
      text-align: left;
      padding: 0 3mm 0 2mm;
      height: 6mm;
      line-height: 6mm;
      border-top: 1px solid #000;
      border-bottom: 1px solid #000;
      border-left: none;
      border-right: none;
      white-space: nowrap;
    }
    thead th.th-grade,
    thead th.th-reexam,
    thead th.th-units { text-align: center; }

    /* Body cells: left/right borders only (except first/last) */
    tbody td {
      padding: 0 3mm 0 2mm;
      height: 6mm;
      line-height: 6mm;
      vertical-align: middle;
      overflow: hidden;
      border-top: none;
      border-bottom: none;
      border-left: 1px solid #000;
      border-right: 1px solid #000;
    }
    tbody td:first-child { border-left: none; }   /* first column: no left border */
    tbody td:last-child  { border-right: none; }  /* last column: no right border */

    .td-code { white-space: nowrap; }
    .td-subj { white-space: nowrap; text-overflow: ellipsis; overflow: hidden; }
    .td-grade, .td-reexam, .td-units { text-align: center; padding-left: 0; padding-right: 0; }

    /* TERM content can be multi-line (e.g., "1st Semester" + AY) */
    .term-wrap { display: inline-block; line-height: 1.0; }
    .term-wrap .ay { font-size: 10px; display: block; margin-top: -1px; }

    tr { page-break-inside: avoid; }
  </style>
</head>
<body>

{{#each pages}}
  <div class="page {{#if @first}}first{{else}}other{{/if}}" style="background-image: url('{{this.bg}}');">

    {{#if @first}}
      <!-- Printed labels -->
      <div class="meta">
        <div class="meta-row">
          <div class="meta-item">
            <span class="label">NAME</span>
            <span class="value">{{../fullName}}</span>
          </div>
          <div class="meta-item">
            <span class="label">DATE OF ADMISSION</span>
            <span class="value">{{../dateAdmission}}</span>
          </div>
        </div>

        <div class="meta-row">
          <div class="meta-item">
            <span class="label">ADDRESS</span>
            <span class="value">{{../address}}</span>
          </div>
          <div class="meta-item">
            <span class="label">PLACE OF BIRTH</span>
            <span class="value">{{../placeOfBirth}}</span>
          </div>
        </div>

        <div class="meta-row">
          <div class="meta-item">
            <span class="label">ENTRANCE CREDENTIALS</span>
            <span class="value">{{../entranceCredentials}}</span>
          </div>
          <div class="meta-item">
            <span class="label">DATE OF BIRTH</span>
            <span class="value">{{../dateOfBirth}}</span>
          </div>
        </div>

        <div class="meta-row">
          <div class="meta-item">
            <span class="label">HIGH SCHOOL</span>
            <span class="value">{{../highSchool}}</span>
          </div>
          <div class="meta-item">
            <span class="label">DATE GRADUATED</span>
            <span class="value">{{../dateGraduated}}</span>
          </div>
        </div>

        <div class="meta-row full">
          <div class="meta-item">
            <span class="label">DEGREE/TITLE EARNED</span>
            <span class="value" style="min-width:120mm">{{../program}}</span>
          </div>
        </div>

        <div class="meta-row">
          <div class="meta-item">
            <span class="label">MAJOR</span>
            <span class="value">{{../major}}</span>
          </div>
          <div class="meta-item">
            <span class="label">DATE OF GRADUATION</span>
            <span class="value">{{../dateGraduated}}</span>
          </div>
        </div>

        <div class="meta-row full" style="margin-top:2mm">
          <div class="meta-item">
            <span class="label">DATE ISSUED</span>
            <span class="value">{{../dateIssued}}</span>
          </div>
        </div>
      </div>
    {{/if}}

    <!-- Subjects -->
    <table class="grid">
      <colgroup>
        <col class="col-term">
        <col class="col-code">
        <col class="col-subj">
        <col class="col-grade">
        <col class="col-reexam">
        <col class="col-units">
      </colgroup>

      <thead>
        <tr>
          <th class="th-term">TERM</th>
          <th class="th-code">COURSE NO.</th>
          <th class="th-subj">SUBJECTS/DESCRIPTION</th>
          <th class="th-grade">FINAL GRADE</th>
          <th class="th-reexam">RE EXAM</th>
          <th class="th-units">CREDIT</th>
        </tr>
      </thead>

      <tbody>
        {{#each rows}}
          <tr>
            <td class="td-term">
              <span class="term-wrap">{{{this.termHtml}}}</span>
            </td>
            <td class="td-code">{{this.subjectCode}}</td>
            <td class="td-subj">{{this.subjectDescription}}</td>
            <td class="td-grade">{{this.finalGrade}}</td>
            <td class="td-reexam">{{this.reExam}}</td>
            <td class="td-units">{{this.units}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/each}}

</body>
</html>
